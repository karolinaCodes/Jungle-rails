<section class="orders-show">

  <header class="page-header">
    <h1 class="text-center">Order</h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <% @order.line_items.each do |line_item|%>
      <%=line_item.inspect%>
      <div>
      <img src= <%=line_item.product.image%> />
      <p><%=line_item.product.name%></p>
      <span><%=line_item.product.description%></span>
      <p>Quantity: <%=line_item.quantity%></p>
      <p>Line Item Total: <%=line_item.total_price_cents%></p>
      </div>
      <% end %>  
      <h4>Order Total: <%=@order.total_cents%></h4>
      <h4><%=@order.email%></h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
